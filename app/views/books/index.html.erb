<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <h2>User info</h2>
        <% @books.each do |book| %>
        	<% if book.image.attached? %>
            <%= image_tag book.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "63x63", class: "attachment user profile_image fallback" %>
          <% end %>
        <% end %>
  
      <table class="table">
        <tbody>
            <tr></tr>
          <tr>
            <th>
              name
            </th>
            
            <th>
              <%= current_user.name %>
            </th>
          </tr>
          
          <tr>
            <th>
              introduction
            </th>
            
            <th>
              <%= current_user.introduction %>
            </th>  
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to "プロフィール", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path(@user.id)" %>
      </div>
  
      <h2 class="mt-3">New book</h2>
      
      <%= form_with model: @book, local: true do|f| %>  
      
      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
      </div>
      
      <div class="form-group">
        <label for="book_opinion">Opinion</label><br>
        <%= f.text_area :body %>
      </div>
      
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      <% end %>  
      </div>
    
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_image %>
            </td>
            <td>
              <%= book.title %>
            </td>
            <td>
            <%= book.body %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>
</div>      

</main>