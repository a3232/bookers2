<main>
<h2>User info</h2>
<% @books.each do |book| %>
	<% if book.image.attached? %>
    <%= image_tag book.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "63x63", class: "attachment user profile_image fallback" %>
  <% end %>
<% end %>

<table class="table">
  <tbody>
    <tr>
      <th>
        name
      </th>
      <th>
        <%= current_user.name %>
      </th>
    </tr>
    <tr>
      <th>
        introduction
      </th>
    </tr>
  </tbody>
</table>

<div class="row">
  <%= link_to "プロフィール", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path" %>
</div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: @Book, local: true do|f| %>
  <div class="form-group">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :opinion %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  <% end %>  
  </div>
  
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  </table>
  </div>
      
</main>