<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <%= render 'book', users: @users %>
    </div>
    
    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        
        <table class="table">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to image_tag(@user.get_profile_image(40,40)), user_path(@user) %><br>
                <%= link_to current_user.name, user_path(@user) %>
              </td>
              <td>
                <%= link_to book.title, book_path(@user) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <%= link_to "edit", edit_book_path(@user), class: "btn btn-sm btn-success edit_book_(@user)" %>  
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@user), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger destroy_book_(@user)" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>
      
  </div>
</div>

</main>