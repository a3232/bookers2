<h2>User info</h2>
  <% users.each do |user| %>
  	<% if user.profile_image.attached? %>
      <%= image_tag user.get_profile_image(63,63) %>
    <% else %>
      <%= image_tag 'no_image', size: "63x63", class: "attachment user profile_image fallback" %>
    <% end %>
  <% end %>

<table class="table">
  <tbody>
      <tr></tr>
    <tr>
      <th>
        name
      </th>

      <th>
        <%= current_user.name %>
      </th>
    </tr>

    <tr>
      <th>
        introduction
      </th>

      <th>
        <%= current_user.introduction %>
      </th>
    </tr>
  </tbody>
</table>

<div class="row">
  <%= link_to "プロフィール", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path(@user.id)" %>
</div>

<h2 class="mt-3">New book</h2>

<%= form_with model: @book, local: true do |f| %>

  <div class="form-group">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>